<Window x:Class="HoresTasques.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoresTasques"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="Gestió de Tasques" Height="500" Width="800"
        materialDesign:ColorZoneAssist.Mode="PrimaryLight">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="TasquesListBox"
                 Margin="10"
                 ItemsSource="{Binding Tasques}"/>


        <Button Content="Afegir Tasca"
                x:Name="btnAfegir"
                Grid.Row="1"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="btnAfegir_Click"
                Width="150"/>
    </Grid>
</Window>
